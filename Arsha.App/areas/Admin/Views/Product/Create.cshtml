@model Product
<div class="container">
    <form method="post" enctype="multipart/form-data">
        
        <div class="form-group">
            <label asp-for="Title">Title</label>
            <input type="text" class="form-control" asp-for="@Model.Title">
            <span class="alert-danger" asp-validation-for="Title"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description">Description</label>
            <input type="text" class="form-control" asp-for="@Model.Description">
            <span class="alert-danger" asp-validation-for="Description"></span>
        </div>

        <div class="form-group">
        <select class="form-select" asp-for ="CategoryId" aria-label="Disabled select example" >
            <option  selected>Choose Category</option>
            @foreach (var item in ViewBag.Categories)
            {
                <option value="@item.Id">@item.Name</option>
            }
 
        </select>
        <span class="alert-danger" asp-validation-for="CategoryId"></span>
        </div>
        <div class="form-group">
            <label asp-for="ImageHeight">ImageHeight</label>
            <input type="text" class="form-control" asp-for="@Model.ImageHeight">
            <span class="alert-danger" asp-validation-for="ImageHeight"></span>
        </div>

        <div class="form-group">
            <label asp-for="ImageWidth">ImageWidth</label>
            <input type="text" class="form-control" asp-for="@Model.ImageWidth">
            <span class="alert-danger" asp-validation-for="ImageWidth"></span>
        </div>

        <div class="form-group">
            <label asp-for="FormFile" class="form-label">FormFile</label>
            <input class="form-control form-control-sm" id="formFileSm" type="file" asp-for="@Model.FormFile">
            <span class="alert-danger" asp-validation-for="FormFile"></span>
        </div>

            @Html.AntiForgeryToken()
        <button type="submit">Create</button>
    </form>
</div>