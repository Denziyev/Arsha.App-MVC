@model Product
<div class="container">
    <form method="post" enctype="multipart/form-data">

        <div class="form-group">
            <label asp-for="Title">Title</label>
            <input type="text" class="form-control" asp-for="@Model.Title">
            <span class="alert-danger" asp-validation-for="@Model.Title"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description">Description</label>
            <input type="text" class="form-control" asp-for="@Model.Description">
            <span class="alert-danger" asp-validation-for="@Model.Description"></span>
        </div>

        <div class="form-group">
            <label asp-for="ImageHeight">ImageHeight</label>
            <input type="text" class="form-control" asp-for="@Model.ImageHeight">
            <span class="alert-danger" asp-validation-for="@Model.ImageHeight"></span>
        </div>

        <div class="form-group">
            <label asp-for="ImageWidth">ImageWidth</label>
            <input type="text" class="form-control" asp-for="@Model.ImageWidth">
            <span class="alert-danger" asp-validation-for="@Model.ImageWidth"></span>
        </div>

        <div class="form-group">
            <label asp-for="FormFile" class="form-label">FormFile</label>
            <input class="form-control  form-control-sm" id="formFileSm" type="file" asp-for="@Model.FormFile">
            <span class="alert-danger" asp-validation-for="@Model.FormFile"></span>
        </div>

        @Html.AntiForgeryToken()
        <img src="~/assets/img/@Model.Image" />
        <button type="submit">Update</button>
    </form>
</div>